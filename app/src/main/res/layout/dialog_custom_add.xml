<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="500dp"
    android:minWidth="270dp">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="6"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_custom_title"
        app:layout_constraintBottom_toTopOf="@id/tv_ok"/>


    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:text="OK"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="4dp"
        android:textColor="#77DBFC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:text="CANCLE"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="4dp"
        android:textColor="#77DBFC"
        app:layout_constraintEnd_toStartOf="@id/tv_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/tv_custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Dialog"
        android:textSize="21sp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="#77DBFC"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"/>


